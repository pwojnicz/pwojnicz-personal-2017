//- Meta:
- var url = 'https://pwojnicz.pl/'
- var title = 'Paweł Wojnicz – front-end developer personal portfolio'
- var desc = 'Nowoczesne, responsywne strony internetowe - planowanie, projektowanie oraz realizacja.'

//- Social profiles:
- var github = 'https://github.com/tabakowy'
- var dribbble = 'https://dribbble.com/tabakowy'
- var codepen = 'https://codepen.io/tabakowy/'

doctype html
html(lang='pl')
  
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=Edge')
    meta(name='viewport', content='width=device-width, height=device-height, minimum-scale=1.0, initial-scale=1.0, user-scalable=0')
    title=title
    meta(name='description', content=desc)
    meta(name='keywords', content="'html5, css3, rwd, webdesign, 'ux design', 'front-end developer', portfolio, projektowanie, kodowanie, 'tworzenie stron www', internetowych, responsywne, freelancer, wordpress, opencart, cms'")
      
    link(rel='author', href='humans.txt')
    link(rel='shortcut icon', type='image/x-icon', href='assets/img/favicon.png')
      
    // Schema.org markup
    meta(itemprop='name', content=title)
    meta(itemprop='description', content=desc)
    meta(itemprop='image', content=url + 'assets/img/og-image.jpg')

    // Open Graph markup
    meta(property='og:type', content='website')
    meta(property='og:title', content=title)
    meta(property='og:image', content=url + 'assets/img/og-image.jpg')
    meta(property='og:image:height', content='387')
    meta(property='og:image:width', content='740')
    meta(property='og:description', content=desc)
    meta(property='og:site_name', content=title)
    meta(property='og:url', content=url)
    
    link(rel='stylesheet', href='assets/main.min.css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,800|Roboto:100,400&subset=latin-ext', rel='stylesheet')
    
  body#start

    include _sections/_header
    include _sections/_hero
    include _sections/_skills
    include _sections/_portfolio
    include _sections/_about
    include _sections/_footer
    
    script(defer, src='assets/main.min.js')
    script(defer, src='https://use.fontawesome.com/releases/v5.0.8/js/all.js')
